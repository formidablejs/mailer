{
	"name": "@formidablejs/mailer",
	"version": "0.1.0-alpha.1",
	"description": "Formidablejs mailer",
	"main": "lib/index.js",
	"types": "types/index.d.ts",
	"publisher": "formidable/Package.js",
	"scripts": {
		"build": "npm run imba:build && npm run ts:build",
		"imba:build": "imbac src --output=lib --platform=node --clean",
		"imba:watch": "imbac -w src --output=lib --platform=node --clean",
		"ts:build": "tsc",
		"ts:watch": "tsc -w",
		"test": "jest",
		"test:watch": "jest --watchAll --detectOpenHandles"
	},
	"author": "Donald Pakkies <donaldpakkies@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"nodemailer": "^6.6.3"
	},
	"devDependencies": {
		"@types/jest": "^27.0.1",
		"@types/node": "^16.7.2",
		"imba": "^2.0.0-alpha.165",
		"jest": "^27.0.6",
		"typescript": "^4.3.5"
	}
}
